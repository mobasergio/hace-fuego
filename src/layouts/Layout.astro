---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Pa ir a la peña o no" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="canonical" href="https://www.haceviento.com" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:title" content={title} />
        <meta property="og:description" content="Pa ir a la peña o no" />
        <meta property="og:image" content="/haceviento-og.jpg" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://www.haceviento.com" />
		<meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content="Pa ir a la peña o no" />
        <meta name="twitter:image" content="/haceviento-og.jpg" />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html, body {
		height: 100%;
		background: black;
		overflow: hidden;
		margin: 0;
		padding: 0;
	}

	#embers {
		position: fixed;
		inset: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
		pointer-events: none;
		display: block;
	}
	
</style>
